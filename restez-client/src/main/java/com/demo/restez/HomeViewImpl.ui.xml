<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:f="urn:import:com.demo.restez.widgets.filter"
	xmlns:r="urn:import:com.demo.restez.restlist" xmlns:gwtbootstrap="urn:import:com.github.gwtbootstrap.client.ui">
	<ui:style>
		.container {
			margin: 20px;
		}
		
		.header {
			background: #f1f1f1;
			padding: 10px;
			margin: 0 2px 20px  2px;
			border-radius: 3px;
			
		}
		
		.list{
	margin-left:80px;
}
	</ui:style>
	<g:HTMLPanel styleName="{style.container}">
		<gwtbootstrap:Row>
			<gwtbootstrap:Column size="12">
				<g:HTML styleName="{style.header}">
					<h1 style="text-align:left">REST EZ</h1>
					<div style="font-size:13pt;color:#ccc;">a Taykey service</div>
				</g:HTML>
			</gwtbootstrap:Column>
		</gwtbootstrap:Row>
		<gwtbootstrap:Row>
			<gwtbootstrap:Column size="2">
				<f:DefaultFilterWidget ui:field="restFilter" />
			</gwtbootstrap:Column>
			<gwtbootstrap:Column size="10">


				<gwtbootstrap:Row>
					<gwtbootstrap:Column size="12">
						<r:DefaultResturantsList ui:field="restList" styleName="{style.list}" />
					</gwtbootstrap:Column>
				</gwtbootstrap:Row>


			</gwtbootstrap:Column>
		</gwtbootstrap:Row>
	</g:HTMLPanel>
</ui:UiBinder>

